<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="331.5dp"
    android:layout_height="298dp"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/night_mode"
        android:src="@drawable/night_mode_notice" />

    <Button
        android:id="@+id/close_btn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignRight="@id/bg"
        android:layout_alignTop="@id/bg"
        android:layout_marginTop="43.5dp"
        android:background="@android:color/transparent" />

</RelativeLayout>